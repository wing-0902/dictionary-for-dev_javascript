---
interface Props {
  title?: string;
}

const { title = '' } = Astro.props; 
---

<div class="root">
  <div class="header">
    <div class="tab">
      <p>{title}</p>
    </div>
    <div class="右"></div>
  </div>
  <div class="children">
    <slot />
  </div>
</div>

<style lang="scss">
  .root {
    .header {
      .tab {
        p {
          font-family: var(--font-fira-code), var(--font-zen-kaku-gothic-new), monospace;
        }
      }
      .右 {

      }
    }
    .children {

    }
  }
</style>